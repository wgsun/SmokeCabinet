<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:src="@mipmap/ic_back" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="设置"
        android:textColor="#FF333333"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="IMEI"
            android:textColor="#FFAEB2B8"
            android:textSize="18sp" />


        <com.midea.cabinet.ui.view.EditTextWithDel
            android:id="@+id/etImei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x63"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_under_line"
            android:gravity="center_vertical"
            android:hint=""
            android:paddingLeft="@dimen/x30"
            android:singleLine="true"
            android:textColor="#333333"
            android:textCursorDrawable="@drawable/my_cursor"
            android:text="869012040981230"
            android:textSize="@dimen/x36" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_blue_stroke_with_white_fill_10"
        android:gravity="center"
        android:text="绑定"
        android:textColor="#1677FF"
        android:textSize="@dimen/x34" />
</LinearLayout>