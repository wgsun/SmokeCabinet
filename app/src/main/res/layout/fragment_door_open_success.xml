<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/face_base_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x58"
            android:layout_marginTop="@dimen/x27"
            android:text="智能零售,便利生活"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x50"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/x62"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginBottom="@dimen/x51"
            android:background="@drawable/bg_blue_stroke_13_with_white_fill"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x209"
                android:layout_height="@dimen/x411"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x90"
                android:background="@mipmap/bg_temp_cabinet"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x28"
                android:text="识别成功"
                android:textColor="#FA972D"
                android:textSize="@dimen/x48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x23"
                android:text="请听到门锁声后再拉开门"
                android:textColor="#FA972D"
                android:textSize="@dimen/x48" />

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_face_door_flower" />


</FrameLayout>